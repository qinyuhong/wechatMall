/* pages/collect/index.wxss */
.collect_main .collect_title {
  padding: 35rpx 0;
  background-color: #f3f4f6;
}
.collect_main .collect_title .collect_item {
  border: 1px solid #ccc;
  margin-left: 15rpx;
  padding: 10rpx;
  border-radius: 8rpx;
}
.collect_main .collect_title .active {
  color: var(--themeColor);
  border: 1px solid currentColor;
}
.collect_main .collect_content .goods_item {
  border-bottom: 1px solid #cccccc;
  display: flex;
}
.collect_main .collect_content .goods_item .goods_image {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 2;
}
.collect_main .collect_content .goods_item .goods_image image {
  width: 70%;
}
.collect_main .collect_content .goods_item .goods_info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect_main .collect_content .goods_item .goods_info .goods_Content {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  font-size: 24rpx;
}
.collect_main .collect_content .goods_item .goods_info .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
