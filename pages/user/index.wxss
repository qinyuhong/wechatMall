page {
  background-color: #edece8;
}
.user_info_G {
  height: 45vh;
  overflow: hidden;
  background-color: #ffffff;
  position: relative;
}
.user_info_G .user_info_img {
  position: relative;
}
.user_info_G .user_info_img .user_imgBig {
  height: 50vh;
  filter: blur(8rpx);
}
.user_info_G .user_info_img .user_iconImg {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  text-align: center;
}
.user_info_G .user_info_img .user_iconImg .user_imgicon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_G .user_info_img .user_iconImg .user_name {
  color: #ffffff;
  font-size: 32rpx;
  margin-top: 20rpx;
}
.user_info_G .btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1px solid greenyellow;
  padding: 30rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  margin-bottom: 90rpx;
  color: #666666;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  width: 90%;
}
.user_content .user_main .history_info {
  background-color: #fff;
  display: flex;
  border: 1px solid #cccccc;
  text-align: center;
}
.user_content .user_main .history_info navigator {
  flex: 1;
  padding: 10rpx;
}
.user_content .user_main .history_info navigator .his_num {
  color: var(--themeColor);
}
.user_content .user_main .history_info navigator .his_name {
  font-size: 28rpx;
}
.user_content .user_main .order_info {
  background-color: #fff;
  margin-top: 20rpx;
}
.user_content .user_main .order_info .order_title {
  padding: 15rpx;
  border-bottom: 1px solid #ccc;
}
.user_content .user_main .order_info .order_main {
  display: flex;
  text-align: center;
}
.user_content .user_main .order_info .order_main navigator {
  flex: 1;
  padding: 15rpx 0;
}
.user_content .user_main .order_info .order_main navigator .iconfont {
  font-size: 42rpx;
  color: var(--themeColor);
}
.user_content .user_main .order_info .order_main navigator .order_name {
  font-size: 28rpx;
}
.user_content .user_main .manner_address {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #fff;
}
.user_content .user_main .app_info {
  margin-top: 20rpx;
  background-color: #fff;
}
.user_content .user_main .app_info .app_info_word {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .app_info .app_info_item {
  border-bottom: 1px solid #ccc;
  padding: 15rpx;
}
.user_content .user_main .info_ohter {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 15rpx;
}
