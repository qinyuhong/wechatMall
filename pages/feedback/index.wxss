page {
  background-color: #eeeeee;
}
.fb_main {
  padding: 20rpx 20rpx;
  color: #666666;
}
.fb_main .fb_title {
  font-size: 28rpx;
}
.fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.fb_main .fb_tips text {
  border: 1px solid #ccc;
  background-color: #fff;
  width: 30%;
  margin: 20rpx 10rpx;
  padding: 10rpx 0;
  text-align: center;
  font-size: 28rpx;
}
.fb_main .fb_content {
  background-color: #fff;
  margin-top: 20rpx;
}
.fb_main .fb_content textarea {
  padding: 20rpx ;
  font-size: 28rpx;
}
.fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_content .fb_tool button {
  width: 90rpx;
  height: 90rpx;
  padding: 0;
  margin: 0;
  margin-left: 20rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
}
.fb_main .fb_content .fb_tool .btn_img {
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.fb_main .fb_btn {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.fb_main .fb_btn button {
  width: 30%;
  height: 80rpx;
  background-color: var(--themeColor);
  color: #fff;
  padding: 0;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
