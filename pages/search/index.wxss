/* pages/search/index.wxss */
page {
  padding: 20rpx ;
  background-color: #dedede;
}
.search_main {
  display: flex;
  height: 60rpx;
}
.search_main input {
  background-color: #fff;
  flex: 1;
  height: 100%;
  border: 1px solid #ccc;
  padding-left: 15rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
}
.search_main button {
  padding: 0;
  margin-left: 10rpx;
  font-weight: normal;
  width: 110rpx;
  height: 100%;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search_content {
  padding: 20rpx 0;
}
.search_content .search_item {
  padding: 15rpx 10rpx;
  border-radius: 8rpx;
  background-color: #fff;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  border-bottom: 1px solid #ccc;
}
