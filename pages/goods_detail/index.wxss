/* pages/goods_detail/index.wxss */
.detail_swiper .goods_swiper {
  height: 65vw;
  text-align: center;
}
.detail_swiper .goods_swiper image {
  width: 60%;
}
.goods_price {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--themeColor);
  padding: 15rpx;
}
.goods_info {
  display: flex;
  padding: 10rpx 0;
}
.goods_info .goods_title {
  flex: 5;
  font-size: 30rpx;
  color: #000000;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_info .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #000000;
}
.goods_info .goods_collect .collect_word {
  font-size: 30rpx;
}
.goods_goodsInfo {
  border-top: 8rpx solid #dedede;
  padding: 20rpx 0;
}
.goods_goodsInfo .goods_infoTitle {
  color: var(--themeColor);
  font-size: 46rpx;
  font-weight: 1200;
  padding: 0 0 15rpx 0;
}
page {
  padding-bottom: 90rpx;
}
.btn_tool {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
}
.btn_tool .btn_Item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.btn_tool .btn_Item button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btn_tool .item_addCart {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffa500;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
.btn_tool .item_toBuy {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #eb4450;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
